    package="com.example.kenne.countries">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.RegionCharActivity" />
        <activity android:name=".QuizActivity" />
        <activity android:name=".Activity.DifficultyActivity" />
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".DetailActivity.CountryDetailActivity" />
        <activity android:name=".Activity.CurrentScoreActivity" />
        <activity android:name=".Activity.CompareActivity" />
        <activity android:name=".DetailActivity.CompareCountryDetailActivity" />
        <activity android:name=".Activity.ScoresActivity" />
        <activity android:name=".FlagActivity"></activity>
    </application>

</manifest>